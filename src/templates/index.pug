extends ./partials/mailchute.pug
block content
  table#bodyTable(border='0', cellpadding='0', cellspacing='0', height='100%', width='100%')
    tr
      td(align='center', valign='top', style='padding-top: 32px; padding-bottom: 24px;')
        a(href='http://sidewire.com')
          img.headerLogo.imageFix(src='https://s3.amazonaws.com/sidewire-emails/transactional/email-header.png')
    tr
      td#avatarContainer(align='center', valign='top')
        img.ticket.imageFix(src='https://s3.amazonaws.com/sidewire-emails/transactional/ticket-host.png')
    tr
      td#contentArea(align='left', valign='top')
        h1 {{SENDER NAME} wants to host a chat with you about
          a(href='chat?') "{SUBJECT|TITLE}."
        p To co-host the chat, just click the button below! Once you post in the conversation, we'll display that you're co-hosting it.
    tr
      td(align='center' valign='top')
        a.buttonCTA(href="ssv") Join the chat!

    tr
      td#emailFooter(align='center' valign='middle')
        table(border='0' cellpadding='0' cellspacing='0' width='100%')
          tr
            td(align='center' valign='top')
              table(border='0' cellpadding='0' cellspacing='0' width='100%')
                tr
                  td.downloadLeft(align='right' valign='top')
                    a(href='https://itunes.apple.com/us/app/sidewire/id1023491591?ls=1&mt=8')
                      img(src='https://s3.amazonaws.com/sidewire-emails/transactional/app-store-button.png')
                  td.downloadMiddle(align='center' valign='top')
                    a(href='https://play.google.com/store/apps/details?id=com.sidewire')
                      img(src='https://s3.amazonaws.com/sidewire-emails/transactional/google-store-button.png')
                  td.downloadRight(align='left' valign='top')
                    a(href='http://www.amazon.com/gp/mas/dl/android?p=com.sidewire')
                      img(src='https://s3.amazonaws.com/sidewire-emails/transactional/amazon-store-button.png')
          tr
            td(align='center' valign='top')
              table(border='0' cellpadding='0' cellspacing='0' width='100%')
                tr
                  td(align='center' valign='top')
                    img.footerLogo.imageFix(src='https://s3.amazonaws.com/sidewire-emails/transactional/footer-logo.png')
          tr
            td(align='center' valign='top')
              table(border='0' cellpadding='0' cellspacing='0' width='100%')
                tr
                  td.footerLegal(align='center' valign='top')
                    a(href="http://sidewire.com") &copy; 2016 Sidewire, Inc.&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                    a(href="newsmakerprofile") Unsubscribe
